{
  "name": "trailhead-stats",
  "description": "This action put your specified Trailhead profile stats in your profile readme",
  "version": "1.2.0",
  "author": "nabondance",
  "private": false,
  "homepage": "https://github.com/nabondance/Trailhead-Stats#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nabondance/Trailhead-Stats.git"
  },
  "bugs": {
    "url": "https://github.com/nabondance/Trailhead-Stats/issues"
  },
  "keywords": [
    "GitHub",
    "Actions",
    "Salesforce",
    "Trailhead",
    "Profile"
  ],
  "exports": {
    ".": "./dist/index.js"
  },
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "all": "pnpm run format:write && pnpm run lint && pnpm run test && pnpm run package",
    "bundle": "pnpm run format:write && pnpm run package",
    "ci-test": "jest --coverage",
    "format:check": "prettier --check **/*.{js,md,yml}",
    "format:write": "prettier --write **/*.{js,md,yml}",
    "lint": "npx eslint . -c ./eslint.config.js",
    "package:watch": "pnpm run package -- --watch",
    "package": "ncc build src/index.js --license licenses.txt",
    "test": "(jest && make-coverage-badge --output-path ./badges/coverage.svg) || make-coverage-badge --output-path ./badges/coverage.svg"
  },
  "lint-staged": {
    "(**/*.{js,md,yaml,yml})": [
      "npx prettier --write"
    ]
  },
  "license": "MIT",
  "eslintConfig": {
    "extends": "./eslint.config.js"
  },
  "jest": {
    "verbose": true,
    "clearMocks": true,
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "js"
    ],
    "testMatch": [
      "**/*.test.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "coverageReporters": [
      "json-summary",
      "text",
      "lcov"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "./src/**"
    ]
  },
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0",
    "axios": "^1.7.5",
    "child_process": "^1.0.2",
    "fs": "^0.0.1-security",
    "path": "^0.12.7",
    "puppeteer": "^22.13.0"
  },
  "devDependencies": {
    "@babel/core": "^7.24.7",
    "@babel/eslint-parser": "^7.25.1",
    "@babel/preset-env": "^7.24.7",
    "@eslint/compat": "^1.1.1",
    "@vercel/ncc": "^0.38.1",
    "babel-jest": "^29.7.0",
    "babel-preset-jest": "^29.6.3",
    "eslint": "^8.57.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-github": "^5.0.1",
    "eslint-plugin-jest": "^28.6.0",
    "jest": "^29.7.0",
    "jest-mock-axios": "^4.7.3",
    "lint-staged": "^15.2.7",
    "make-coverage-badge": "^1.2.0",
    "prettier": "^3.3.3"
  }
}
